    .form-inline .form-group {
      margin-right: 10px;
    }

    .well-primary {
      color: rgb(255, 255, 255);
      background-color: rgb(66, 139, 202);
      border-color: rgb(53, 126, 189);
    }

    .glyphicon {
      margin-right: 5px;
    }
     .label1 {
  font-size: 20px;
  color:#4d91cd
        }

  </style>