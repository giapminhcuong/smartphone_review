<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<%= form_for(@product) do |f| %>
<div class="card" style="background-color:#f6f6f9">
  <div class="card-header">
    <h4 class="card-title">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span class="glyphicon glyphicon-file">
        </span>基本情報</a>
    </h4>
  </div>
  <div id="collapseOne" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.text_field :name, class:"form-control", placeholder: "品名", :required => true %>
          </div>
          <div class="form-group">
            <%= f.text_field :category, class: "form-control", placeholder: "カテゴリー", :required => true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
          <label class= "label1">メーカー</label>
            <%= f.select :maker_id, Maker.all.collect { |p| [ p.name, p.id ] }, include_blank: true, :required => true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
          <label class= "label1">写真</label>
            <%= f.file_field :image_path %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.text_field :release_date, class:"form-control", placeholder: "発売時間" %>
          </div>
          <div class="form-group">
            <%= f.text_field :description, class: "form-control", placeholder: "説明" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="card" style="background-color:#f6f6f9">
  <div class="card-header">
    <h4 class="card-title">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"><span class="glyphicon glyphicon-th-list">
        </span>仕様</a>
    </h4>
  </div>
  <div id="collapseTwo" class="panel-collapse collapse">
    <div class="panel-body">
      <label class="label1">画面:</label>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :screen_type, class:"form-control", placeholder: "画面技術" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :resolution, class:"form-control", placeholder: "画面解像度" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :screen_size, class:"form-control", placeholder: "画面サイズ" %>
          </div>
        </div>
      </div>
      <label class= "label1">後のカメラ</label>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :rear_camera, class:"form-control", placeholder: "カメラ解像度" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :rear_flash, class:"form-control", placeholder: "フラッシュライト" %>
          </div>
        </div>
      </div>
      <label class= "label1">前のカメラ</label>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.text_field :rear_camera, class:"form-control", placeholder: "カメラ解像度" %>
          </div>
        </div>
      </div>
      <label class= "label1">オペレーティングシステム と CPU</label>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :os, class:"form-control", placeholder: "オペレーティングシステム" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :chipset, class:"form-control", placeholder: "チップセット（CPUメーカー）" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :cpu_speed, class:"form-control", placeholder: "CPU速度" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :chipset, class:"form-control", placeholder: "グラフィックチップ（GPU）" %>
          </div>
        </div>
      </div>
      <label class= "label1">メモリ</label>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :ram, class:"form-control", placeholder: "内蔵メモリ容量 (RAM)" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :rom, class:"form-control", placeholder: "内蔵メモリ容量 (ROM)" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :expandable_storage, class:"form-control", placeholder: "外部メモリカード" %>
          </div>
        </div>
      </div>

      <label class= "label1">通信</label>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :conectivity_type, class:"form-control", placeholder: "通信規格" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :wifi, class:"form-control", placeholder: "Wi-Fi規格" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :bluetooth, class:"form-control", placeholder: "Bluetooth" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :port, class:"form-control", placeholder: "接続ポート" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :jack, class:"form-control", placeholder: "ジャックヘッドセット" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :other_connectivity, class:"form-control", placeholder: "他の通信" %>
          </div>
        </div>
      </div>
      <label class= "label1">デザイン</label>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :material, class:"form-control", placeholder: "材料" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :dimension, class:"form-control", placeholder: "サイズ" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.text_field :weight, class:"form-control", placeholder: "重量" %>
          </div>
        </div>
      </div>
      <label class= "label1">バッテリー＆充電器の情報</label>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :pin_capability, class:"form-control", placeholder: "バッテリー容量" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :pin_type, class:"form-control", placeholder: "バッテリー技術" %>
          </div>
        </div>
      </div>
      <label class= "label1">ユーティリティー</label>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :security, class:"form-control", placeholder: "高度なセキュリティ" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :other_feature, class:"form-control", placeholder: "特別の機能" %>
          </div>
        </div>
      </div>
      
    </div>
  </div>
  <div>
  </div>
  </div>
  <div class="row">
        <div class="col-lg-1 col-lg-offset-5 text-center">
              <div class="form-group">
                  <%= f.submit "完了", :class => "btn btn-primary"  %>
              </div>
        </div>
      </div>
      </div>

  
  <% end %>
